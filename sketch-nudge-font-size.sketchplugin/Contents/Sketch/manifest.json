{
  "name": "Sketch nudge font size",
  "$schema": "https://raw.githubusercontent.com/sketch-hq/SketchAPI/develop/docs/sketch-plugin-manifest-schema.json",
  "icon": "icon.png",
  "commands": [
    {
      "name": "Increase font size",
      "identifier": "sketch-nudge-font-size.increase-font-size",
      "script": "__increase-font-size.js",
      "shortcut": "ctrl option ↑"
    },
    {
      "name": "Decrease font size",
      "identifier": "sketch-nudge-font-size.decrease-font-size",
      "script": "__decrease-font-size.js",
      "shortcut": "ctrl option ↓"
    }
  ],
  "menu": {
    "title": "Nudge font size",
    "items": [
      "sketch-nudge-font-size.increase-font-size",
      "sketch-nudge-font-size.decrease-font-size"
    ]
  },
  "version": "0.2.0",
  "description": "Quickly increase or decrease the selected text layer(s) font size based on available shared text styles from a library",
  "identifier": "sketch-nudge-font-size",
  "disableCocoaScriptPreprocessor": true,
  "appcast": "https://raw.githubusercontent.com//master/.appcast.xml"
}